<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/departureAirportLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/departure_airport"
        style="@style/SearchFilterFragment_FilterLabel" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_clickable_search_filter"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:padding="8dp"
        android:text="VÃ¡clav Havel Airport Prague"
        android:textColor="@color/color_bg_clickable_search_filter"
        app:layout_constraintEnd_toEndOf="@+id/departureAirportLabel"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@id/departureAirportLabel" />

    <TextView
        style="@style/SearchFilterFragment_FilterLabel"
        android:text="@string/number_of_passengers"
        app:layout_constraintEnd_toEndOf="@+id/departureAirportLabel"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>