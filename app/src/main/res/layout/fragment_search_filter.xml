<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/departureAirportLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/departure_airport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/departureAirport"
        style="@style/SearchFilterFragment_ClickableFilterOptionText"
        android:text="VÃ¡clav Havel Airport Prague"
        app:layout_constraintEnd_toEndOf="@+id/departureAirportLabel"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@id/departureAirportLabel" />

    <TextView
        android:id="@+id/departureFromLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginEnd="4dp"
        android:text="@string/departure_from"
        app:layout_constraintEnd_toStartOf="@id/departureToLabel"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@+id/departureAirport" />

    <TextView
        android:id="@+id/departureToLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginStart="4dp"
        android:text="@string/departure_to"
        app:layout_constraintEnd_toEndOf="@+id/departureAirportLabel"
        app:layout_constraintStart_toEndOf="@id/departureFromLabel"
        app:layout_constraintTop_toBottomOf="@+id/departureAirport" />

    <TextView
        android:id="@+id/departureFrom"
        style="@style/SearchFilterFragment_ClickableFilterOptionText"
        android:text="25/09/2019"
        app:layout_constraintEnd_toEndOf="@+id/departureFromLabel"
        app:layout_constraintStart_toStartOf="@+id/departureFromLabel"
        app:layout_constraintTop_toBottomOf="@id/departureFromLabel" />

    <TextView
        android:id="@+id/departureTo"
        style="@style/SearchFilterFragment_ClickableFilterOptionText"
        android:text="26/10/2019"
        app:layout_constraintEnd_toEndOf="@id/departureToLabel"
        app:layout_constraintStart_toStartOf="@+id/departureToLabel"
        app:layout_constraintTop_toBottomOf="@id/departureFromLabel" />

    <TextView
        android:id="@+id/returnFromLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginEnd="4dp"
        android:text="@string/return_from"
        app:layout_constraintEnd_toStartOf="@id/returnToLabel"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@+id/departureFrom" />

    <TextView
        android:id="@+id/returnToLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginStart="4dp"
        android:text="@string/return_to"
        app:layout_constraintEnd_toEndOf="@+id/departureAirportLabel"
        app:layout_constraintStart_toEndOf="@id/returnFromLabel"
        app:layout_constraintTop_toBottomOf="@+id/departureFrom" />

    <TextView
        android:id="@+id/returnFrom"
        style="@style/SearchFilterFragment_ClickableFilterOptionText"
        android:text="25/09/2019"
        app:layout_constraintEnd_toEndOf="@+id/returnFromLabel"
        app:layout_constraintStart_toStartOf="@+id/returnFromLabel"
        app:layout_constraintTop_toBottomOf="@id/returnFromLabel" />

    <TextView
        android:id="@+id/returnTo"
        style="@style/SearchFilterFragment_ClickableFilterOptionText"
        android:text="26/10/2019"
        app:layout_constraintEnd_toEndOf="@id/returnToLabel"
        app:layout_constraintStart_toStartOf="@+id/returnToLabel"
        app:layout_constraintTop_toBottomOf="@id/returnFromLabel" />

    <TextView
        android:id="@+id/numberOfPassengersLabel"
        style="@style/SearchFilterFragment_FilterLabel"
        android:text="@string/number_of_passengers"
        app:layout_constraintStart_toStartOf="@+id/departureAirportLabel"
        app:layout_constraintTop_toBottomOf="@id/returnFrom" />

    <TextView
        android:id="@+id/textView"
        style="@style/SearchFilterFragment_FilterLabel"
        android:layout_marginEnd="8dp"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/departureAirport"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPassengersLabel"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_add"
            android:tint="@color/colorWhite" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="44dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_remove"
            android:tint="@color/colorWhite" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>